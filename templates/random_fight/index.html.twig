{% extends 'base.html.twig' %}

{% block title %}Hello RandomFightController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{ controller_name }}</h1>
		<h2>{{randomFight.votes[0].fighter.name}}
			{{randomFight.votes[0].numberOfVote}}
			VS
			{{randomFight.votes[1].fighter.name}}
			{{randomFight.votes[1].numberOfVote}}</h2>
		<form action='{{path('app_add_vote',{vote_id:randomFight.votes[0].id })}}' method='GET'>
			<button type='submit'>Vote for fighter 1</button>
		</form>
		<form action='{{path('app_add_vote',{vote_id:randomFight.votes[1].id })}}' method='GET'>
			<button type='submit'>Vote for fighter 2</button>
		</form>
	</div>
{% endblock %}
