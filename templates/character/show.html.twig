{% extends 'base.html.twig' %}

{% block title %}Character
{% endblock %}

{% block body %}
	<h1>Character</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ character.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ character.name }}</td>
			</tr>
			<tr>
				<th>Strength</th>
				<td>{{ character.strength }}</td>
			</tr>
		</tbody>
	</table>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Fighter 1</th>
				<th>Votes</th>
				<th>Fighter 2</th>
				<th>Votes</th>
				<th>IsBalanced</th>
				<th>IsValid</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for fight in fights %}
				<tr>
					<td>{{ fight.id }}</td>
					<td>
						{{ fight.votes[0].Fighter.name }}
					</td>
					<td>
						{{ fight.votes[0].numberOfVote }}
					</td>

					<td>
						{{ fight.votes[1].Fighter.name }}
					</td>
					<td>
						{{ fight.votes[1].numberOfVote }}
					</td>
					<td>{{ fight.isBalanced ? 'Yes' : 'No' }}</td>
					<td>{{ fight.isValid ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('app_fight_show', {'id': fight.id}) }}">show</a>
						<a href="{{ path('app_fight_edit', {'id': fight.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


	<a href="{{ path('app_character_index') }}">back to list</a>

	<a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

	{{ include('character/_delete_form.html.twig') }}
{% endblock %}
